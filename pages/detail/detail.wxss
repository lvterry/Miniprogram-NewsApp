.news-detail-container {
  padding: 30rpx 30rpx 40rpx 30rpx;
  color: #454545;
  font-size: 28rpx;
  line-height: 44rpx;
}

.news-detail-time {
  flex-grow: 1;
  padding-left: 24rpx;
}

.news-detail-title {
  font-size: 42rpx;
  line-height: 60rpx;
  font-weight: bold;
  margin: 12rpx 0;
}

.news-detail-meta {
  color: #999;
  font-size: 26rpx;
  line-height: 36rpx;
  margin-bottom: 32rpx;
  display: flex;
}

.paragraph {
  margin-bottom: 16rpx;
}

.image {
  margin-bottom: 24rpx;
  width: 100%;
}